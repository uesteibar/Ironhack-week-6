<div class="row">

  <div class="col-md-4 col-md-offset-4">

    <%= form_tag url: '/login' do %>
      <div class="form-group">
        <%= label_tag :email%>
        <%= text_field_tag :email, nil, class: "form-control text-center" %>
      </div>
      <div class="form-group">
        <%= label_tag :password%>
        <%= password_field_tag :password, nil, class: "form-control text-center" %>
      </div>

      <div class="form-group">
        <%= submit_tag "Sign up", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

  </div>
</div>
