
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag("/concerts/budget", method: "get") do %>

    <div class="form-group">
      <%= label_tag(:budget, "Set your budget:") %>
      <%= number_field_tag :budget, nil, class: "form-control text-center huge-input" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Search", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>

  </div>
</div>
