<div class="row">
  <div class="jumbotron col-md-10 col-md-offset-1 row">
    <div class="col-md-4">
      <%= image_tag @concert.poster.url(:medium), class:"img-responsive" %>
    </div>

    <div class="col-md-7 col-md-offset-1">
      <h1>
        <%= @concert.band %>
      </h1>
      <p>
        <%= @concert.date.strftime("%d.%m.%y") %>
      </p>
      <p>
        <%= "#{@concert.price} â‚¬" %>
      </p>
      <p>
        <%= "#{@concert.venue} - #{@concert.city.name}" %>
      </p>
      <p>
        <%= @concert.description %>
      </p>

      <%= render "helpers/comments/comments_count_tag", comments_count: @concert.comments_count %>

    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [@concert, @comment] do |f| %>
    <div class="form-group">
      <%= f.label :username%>
      <%= f.text_field :username, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.label :content%>
      <%= f.text_area :content, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
    </div>
    <% end %>
  </div>
</div>
<hr>
<%= render "helpers/comments/comment_list", comments: @concert.comments.slice(0, @concert.comments.size - 1) %>
